{
    /******************** LIB_Other ********************/

    // 类型：SWC 库（lib） 或 应用程序（app）
    "type": "lib",

    // 编译器选项
    "compilerOptions": {
        // 构建调试版本
        "debug": true,

        /******************** 源文件路径 ********************/

        // 源代码路径，用于 VSCode 代码支持提示，通常内容是和 include-sources 相同
        "source-path": [
            "src",
            "lib/flash"
        ],
        // 包含路径，用于编译时即使没有引用到的路径下的库也进行导入
        "include-sources": [
            "src",
            "lib/flash"
        ],
        // 包含类路径，用于编译时即使没有引用到的相关类也进行导入
        "include-classes": [

        ],

        /******************** 引用库路径 ********************/
        // 库文件的三种链接方式：Merged、External 和 Include

        // Merged
        "library-path": [

        ],
        // External
        "external-library-path": [

        ],
        // Include
        "include-libraries": [

        ],

        /******************** 输出相关 ********************/
        // 输出路径（默认使用 IDEA 的生成路径）
        "output": "../out/production/LIB_Other/LIB_Other.swc"
    }
}
